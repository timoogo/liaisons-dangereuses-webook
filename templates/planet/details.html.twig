{% extends 'base.html.twig' %}

{% block title %}Hello PlanetController!{% endblock %}

{% block body %}
    <div class="container">
        {% block navigation %}
            <nav>
                <ul>

                    {% if not app.user %}
                        <li>
                            <a href="{{ path('app_login')  }}">Login</a>
                        </li>
                    {% else %}
                        <span class="flex justify-between">{{ app.user.username }}
                    <li>
                        <a href="{{ path('app_logout') }}">logout</a>
                    </li>
                    </span>

                    {% endif %}
                    <li class="flex justify-between">
                        <a href="{{ path('planets') }}">Planets</a>
                    </li>
                    <li class="flex justify-between">
                        <a href="{{ path('galaxies') }}">Galaxies</a>
                    </li>
                    <li class="flex justify-between">
                        <a href="{{ path('officers') }}">Officers</a>
                    </li>
                    <li class="flex justify-between">
                        <a href="{{ path('natural_satellites') }}">Natural satellites</a>
                    </li>


                </ul>
            </nav>
        {% endblock %}
        <div class="row mt-3 mb-4">
            <div class="col-md-4">
                <img src="https://via.placeholder.com/600x400" alt="{{ planet.name }}" class="img-fluid">
            </div>
            <div class="col-md-8">
                <h1 class="mt-4 mt-md-0">{{ planet.name }}</h1>
                <h2 class="mt-4 mt-md-0">{{ planet.galaxy }}</h2>

                <hr>
            </div>
        </div>
    </div>
{% endblock %}