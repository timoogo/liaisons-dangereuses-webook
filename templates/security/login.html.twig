{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
<form method="post" class="flex justify-center items-center h-screen flex-col">
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    {% if app.user %}
        <div class="flex flex-col align-items-center justify-between">
            <span class="text-3xl">You are logged in as {{ app.user.username }}</span> 
            <a href="{{ path('admin') }}" class="py-4 flex items-center justify-center ">Go to administration</a>
            <a href="{{ path('admin') }}" class="py-4 flex items-center justify-center ">Go back</a>
        </div>
        {% else %}
        <div class="w-1/2 flex flex-col align-items-center">

            <h1 class="text-center py-12 text-3xl">Please sign in</h1>
            <label for="inputUsername">Username</label>
            <input type="text" value="{{ last_username }}" name="username" id="inputUsername" class="form-control border border-2 border-red-300 text-black " autocomplete="username" required autofocus>
            <label for="inputPassword">Password</label>
            <input type="password" name="password" id="inputPassword" class="form-control border border-2 border-red-300 text-black" autocomplete="current-password" required>
        
            <input type="hidden" name="_csrf_token"
                   value="{{ csrf_token('authenticate') }}"
            >
        

            <button class="bg-purple-500 hover:bg-purple-700 text-white font-bold py-2 px-4 my-4 rounded" type="submit">
                Sign in
            </button>
     {% endif %}
   

    </div>
</form>
{% endblock %}
