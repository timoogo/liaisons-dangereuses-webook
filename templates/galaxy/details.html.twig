{% extends 'base.html.twig' %}

{% block title %}Hello GalaxyController!{% endblock %}

{% block body %}
    <div class="container">
        <h1>{{ galaxy.name }}</h1>
        <div class="row mt-3 mb-4">
            <div class="col-md-4">
                <img src="https://via.placeholder.com/600x400" alt="{{ galaxy.name }}" class="img-fluid">
            </div>
            <div class="col-md-8">
                <p class="mt-4 mt-md-0">{{ galaxy.description }}</p>
                <h2 class="mt-4 mt-md-0">{{ galaxy.hubbleSequence }}</h2>

                <hr>
            </div>
        </div>
    </div>
{% endblock %}