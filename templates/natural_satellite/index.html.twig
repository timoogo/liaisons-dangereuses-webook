{% extends 'base.html.twig' %}

{% block title %}Hello NaturalSatellite!{% endblock %}

{% block body %}
    <div class="container">
        {% block navigation %}
            <nav>
                <ul>

                    {% if not app.user %}
                        <li>
                            <a href="{{ path('app_login')  }}">Login</a>
                        </li>
                    {% else %}
                       
                    <li>
                        <a href="{{ path('app_logout') }}"> <span class="flex justify-between">{{ app.user.username }}logout</a>
                    </li>
                    </span>

                    {% endif %}
                    <li class="flex justify-between">
                        <a href="{{ path('planets') }}">Planets</a>
                    </li>
                    <li class="flex justify-between">
                        <a href="{{ path('galaxies') }}">Galaxies</a>
                    </li>
                    <li class="flex justify-between">
                        <a href="{{ path('officers') }}">Officers</a>
                    </li>
                    <li class="flex justify-between">
                        <a href="{{ path('natural_satellites') }}">Natural satellites</a>
                    </li>


                </ul>
            </nav>
        {% endblock %}
        <h1 class="mt-3 mb-4">NaturalSatellite</h1>
        <div class="row">
            {% for natural_satellite in natural_satellites %}
                <div class="col-md-4">
                    <div class="card mb-4">
                        <img src="https://via.placeholder.com/200x150" alt="{{ natural_satellite.name }}" class="card-img-top">

                </div>
                    <div class="d-flex justify-content-between align-item-center">
                        <a href="{{ path('natural_satellites_details', {id: natural_satellite.id}) }}" class="btn btn-dark">View details</a>
                    </div>
                </div>

            {% endfor %}
        </div>
    </div>
{% endblock %}